@model IdeaType

@{
    ViewData["Title"] = "Idea Type Details";
}

<div class="container-idea-type">
    <h1>@Model.Title</h1>
    <div class="row">
        <div class="col-md-8">
            <p>@Model.Description</p>
        </div>
    </div>
</div>

<style>
    .container-idea-type {
        background-color: @Model.Color;
        padding: 20px;
        margin-top: 20px;
        border-radius: 5px;
    }
</style>
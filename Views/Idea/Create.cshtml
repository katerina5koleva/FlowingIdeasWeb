@using MyWebApp.ViewModels;
@model CreateIdeaViewModel
<form asp-action="Create" method="post">
    <input type="hidden" id="UserId" name="UserId" asp-for="UserId" />
    <input type="hidden" id="Email" name="UserEmail" asp-for="UserEmail" />
    @Html.AntiForgeryToken()
        <div class="form-group mb-4">
            <label asp-for="SelectedIdeaTypeId">Idea Type</label>
            <select asp-for="SelectedIdeaTypeId" class="form-control">
            <option value="">Select your idea type</option>
                @foreach (var ideaType in ViewBag.IdeaTypes)
                {
                    <option value="@ideaType.Id">@ideaType.Title</option>
                }
            </select>
            <span asp-validation-for="SelectedIdeaTypeId" class="text-danger"></span>
        </div>
    <div class="form-group mb-4">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter your idea title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" rows="5" placeholder="Write your idea"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="IsPublic">Do you want it to be displayed publically on our page?</label>
        <div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="IsPublic" value="true" id="isPublicYes">
                <label class="form-check-label" for="isPublicYes">Yes</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="IsPublic" value="false" id="isPublicNo">
                <label class="form-check-label" for="isPublicNo">No</label>
            </div>
        </div>
    </div>
    <div class="form-group mb-4">
        <label asp-for="ShowOwner">Do you want be given credit?</label>
        <div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="ShowOwner" value="true" id="showOwnerYes">
                <label class="form-check-label" for="showOwnerYes">Yes</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="ShowOwner" value="false" id="showOwnerNo">
                <label class="form-check-label" for="showOwnerNo">No</label>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

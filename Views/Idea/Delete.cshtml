@model Idea

<h1>Are you sure you want to delete this idea type?</h1>

<form asp-action="Delete" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    
    <div class="form-group mb-4">
        <label asp-for="Type">Idea Type</label>
        <select asp-for="Type" class="form-control" disabled>
            @foreach (var ideaType in ViewBag.IdeaTypes)
            {
                <option value="@ideaType.Id">@ideaType.Title</option>
            }
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-4">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter your idea title" readonly>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-4">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" rows="5" placeholder="Write your idea" readonly></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-4">
        <label asp-for="IsPublic">Do you want it to be displayed publically on our page?</label>
        <div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="IsPublic" value="true" id="isPublicYes" disabled>
                <label class="form-check-label" for="isPublicYes">Yes</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="IsPublic" value="false" id="isPublicNo" disabled>
                <label class="form-check-label" for="isPublicNo">No</label>
            </div>
        </div>
    </div>
    
    <div class="form-group mb-4">
        <label asp-for="ShowOwner">Do you want to be given credit?</label>
        <div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="ShowOwner" value="true" id="showOwnerYes" disabled>
                <label class="form-check-label" for="showOwnerYes">Yes</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="ShowOwner" value="false" id="showOwnerNo" disabled>
                <label class="form-check-label" for="showOwnerNo">No</label>
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <form action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
        </form>
    </div>
</form>
